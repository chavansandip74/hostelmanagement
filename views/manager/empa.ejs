<%- include('mnavbar.ejs')%>
<div class="container-fluid">
    <div class="col-md-12 p-2 text-center">
        <h3 class="text-success text-center"> <b>Employee Application </b></h3>
    </div>
    
    <hr>
    <table class="table table-sm table-bordered">
    <tr>
        <th>Approve</th>
        <th>Delete</th>
        <th>Sn</th>
        <th>Employee Name</th>
        <th>Employee Category</th>
        <th>Employee Mobile Number</th>
        <th>Employee image</th>
        <th>Employee Address</th>
        <th>Employee B-Date</th>
        <th>Employee Adhar-no</th>
      
    </tr>
<% for(var i=0;i<empappli.length;i++)
{
    %>
    <tr>
        <td width="5%" style="white-space: nowrap;">
            <a href="/manager/empalloc/<%=empappli[i].empappli_id%>"><button class="btn btn-primary"><i class="fa fa-edit"></i></button></a>
        </td>
        <td width="5%" style="white-space: nowrap;">
            <a href="/manager/delete_empappli/<%=empappli[i].empappli_id %>"><button class="btn btn-danger"><i class="fa fa-trash"></i></button></a>
        </td>
     <td><%=i+1%></td>
     <td><%=empappli[i].emp_name %></td>
     <td><%=empappli[i].emp_cat %></td>
     <td><%=empappli[i].emp_mno %></td>
     <td width="150px">
        <img src="/uploads/<%=empappli[i].emp_img %>" width="150px" >
        </td>
     <td><%=empappli[i].emp_addr %></td>
     <td><%=empappli[i].emp_bd %></td>
     <td><%=empappli[i].emp_adhr %></td>
     
    
    </tr>
<%}%>
</table>

