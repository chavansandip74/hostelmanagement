<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
var options = {
    "key": "rzp_test_XW9VAx9XR4VH66", // Enter the Key ID generated from the Dashboard
    "amount":"1200000",       //  Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
    "currency": "INR",
    "name": "Hostel Fees", //your business name
    "description": "fees_cat" ,  
    "image": "https://music.youtube.com/img/on_platform_logo_dark.svg",
    //"order_id": "order_9A33XWu170gUtm", //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
    "callback_url": "http://localhost:1000/pgpayment/<%=approve.pgapprove_id%>",
